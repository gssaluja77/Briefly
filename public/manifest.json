{
  "manifest_version": 3,
  "name": "Briefly - Quick AI Summary",
  "version": "1.3",
  "description": "Get a customized AI-powered summary of any web page.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["sidepanel.html", "sidepanel.js", "index.css", "content.js"],
      "matches": ["<all_urls>"]
    }
  ]
}